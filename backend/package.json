{
  "name": "mtg-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "20.14.0",
    "yarn": "1.22.19"
  },
  "scripts": {
    "start": "nodemon --exec babel-node -r dotenv/config ./src/index.js",
    "start-prod": "pm2 start backend.pm2.json",
    "stop-prod": "pm2 delete backend",
    "build": "yarn lint && babel src --out-dir dist",
    "create-migration": "babel-node -r dotenv/config node_modules/.bin/knex migrate:make new_migration",
    "migrate": "babel-node -r dotenv/config node_modules/.bin/knex migrate:latest",
    "rollback": "babel-node -r dotenv/config node_modules/.bin/knex migrate:rollback",
    "update-cards": "babel-node -r dotenv/config src/scripts/updateCardsManually.js",
    "update-card-images": "babel-node -r dotenv/config src/scripts/updateAllCardImages.js",
    "update-sets": "babel-node -r dotenv/config src/scripts/updateSetsManually.js",
    "backup-db": "babel-node -r dotenv/config src/scripts/backupDBManually.js",
    "update-precons": "babel-node -r dotenv/config src/scripts/updatePreconsManually.js",
    "store-prices": "babel-node -r dotenv/config src/scripts/storeCardProceManually.js",
    "lint": "eslint '*/**/*.js'",
    "lint:fix": "eslint '*/**/*.js' --fix"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@getvim/execute": "1.0.0",
    "@google/genai": "^1.6.0",
    "@graphql-tools/schema": "^10.0.4",
    "apollo-server-koa": "3.12.0",
    "body-parser": "1.20.2",
    "cron": "2.3.0",
    "crypto": "1.0.1",
    "dotenv": "16.0.3",
    "google-auth-library": "9.10.0",
    "googleapis": "^142.0.0",
    "graphql": "16.8.1",
    "graphql-tag": "2.12.6",
    "http-status-codes": "2.2.0",
    "knex": "3.1.0",
    "koa": "2.14.2",
    "koa-session": "6.4.0",
    "line-by-line": "0.1.6",
    "lodash": "4.17.21",
    "merge-graphql-schemas": "1.5.8",
    "moment": "^2.30.1",
    "mysql": "2.17.1",
    "pg": "8.10.0",
    "sharp": "0.32.6",
    "uuid": "^10.0.0",
    "winston": "^3.13.0",
    "winston-dashboard": "^1.0.12"
  },
  "devDependencies": {
    "@babel/cli": "7.21.0",
    "@babel/core": "7.21.4",
    "@babel/node": "7.24.7",
    "@babel/preset-env": "7.21.4",
    "@babel/preset-typescript": "^7.24.7",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-node": "4.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "nodemon": "2.0.22",
    "pm2": "5.3.0"
  }
}
